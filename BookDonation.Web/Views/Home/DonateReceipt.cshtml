@model BookDonation.DB.Books


@{
    ViewBag.Title = "Your Donation receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <h2>Thanks for your donation!</h2>
    <h5>The book information is:</h5>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <br />

        <dt>
            @Html.DisplayNameFor(model => model.QtyAvailable)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QtyAvailable)
        </dd>

        <br />

        <dt>
            @Html.DisplayNameFor(model => model.authors)
        </dt>

        <dd>
            @ViewBag.AuthorName
        </dd>

        <br />

        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

        <br />

        <dt>
            @Html.DisplayNameFor(model => model.genres)
        </dt>

        <dd>
            @ViewBag.GenreName
        </dd>

        <br />

        <dt>
    </dl>
</div>
<button onclick="PrintFunction()" id="btn" class="btn">Print receipt</button>
